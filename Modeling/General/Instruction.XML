<?xml version="1.0" encoding="UTF-8"?>
<!-- XML model for instructions-->

<Instructions>
	<!-- XML model for instruction: R-R -->
	<!-- Bytes: localization of the object in the instruction-->
	<Inst>
		<type> R </type>
		<name> add </name>	
		<RS1> size | PosInit | PosEnd </RS1> <!-- source reg 1 -->
		<RS2> size | PosInit | PosEnd </RS2> <!-- source reg 2 -->
		<RD> size | PosInit | PosEnd </RD> <!-- destination reg -->
		<Funct7> 0000000 | size | PosInit | PosEnd </Funct7>
		<Funct3> 000 | size | PosInit | PosEnd </Func3t>
		<OpCode> 0110011 |size | PosInit | PosEnd </Opcode>
		<Requires> Requires </Requires> <!-- IsRV32 - Null  NO SE QUE PONER AQUI EL DE FRANDER LO PIDE-->
	</Inst>

	<!-- XML model for instruction: R-immediate and load-->
	<Inst>
		<type> type </type>
		<name> name </name>	
		<RS1> rs1 | size | PosInit | PosEnd </RS1> <!-- source reg 1 -->
		<IMM> Imm | size | PosInit | PosEnd </IMM> <!-- source Immediate -->
		<RD> rd | size | PosInit | PosEnd </RD> <!-- destination reg -->
		<Funct3> Funct3 | size | PosInit | PosEnd </Funct3>
		<OpCode> OpCode | size | PosInit | PosEnd</Opcode>
		<Requires> Requires </Requires> <!-- IsRV32 - Null -->
	</Inst>

	<!-- XML model for instruction: S-->
	<!-- off1 + off2 = dir store-->
	<Inst>
		<type> type </type>
		<name> name </name>	
		<RS1> rs1 | size | PosInit | PosEnd </RS1> <!-- source reg 1 -->
		<RS2> rs2 | size | PosInit | PosEnd </RS2> <!-- source reg 2 -->
		<OFF1> imm | size | PosInit | PosEnd </OFF1> <!-- offset 1 imm -->
		<OFF2> imm | size | PosInit | PosEnd </OFF2> <!-- offset 2 imm -->
		<Funct3>  size | PosInit | PosEnd </Funct3>
		<OpCode> OpCode |size | PosInit | PosEnd </Opcode>
		<Requires> Requires </Requires> <!-- IsRV32 - Null -->
	</Inst>

